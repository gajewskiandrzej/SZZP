@model IEnumerable<UserListViewModel>
@using SZZP2._2.Models.SZZPViewModels

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Użytkownicy aplikacji</div>
    <div class="panel-body">
        <div class="btn-group">
            <a id="createEditUserModal" asp-action="AddUser" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Dodaj użytkownika
            </a>
        </div>
        <div class="btn-group">
                <a asp-controller="ApplicationRole" asp-action="Index" class="btn btn-success">
                    <i class="glyphicon glyphicon-align-right glyphicon-book"></i>  Role użytkowników
                </a>
        </div>
        <p></p>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Nazwa użytkownika</th>
                    <th>E-mail</th>
                    @*<th>Rola</th>*@
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        @*<td>@item.RoleName</td>*@
                        <td>
                            <a id="editUserModal" data-toggle="modal" asp-action="EditUser" asp-route-id="@item.Id"
                               class="btn btn-success">
                                <i class="glyphicon glyphicon-pencil"></i>  Edytuj
                            </a>
                            <a id="deleteUserModal" data-toggle="modal" asp-action="DeleteUser" asp-route-id="@item.Id" 
                                class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>  Usuń
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
    {
    <script src="~/js/user-index.js" asp-append-version="true"></script>
}