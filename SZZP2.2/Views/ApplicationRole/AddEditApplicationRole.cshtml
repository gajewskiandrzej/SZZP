@model SZZP2._2.Models.SZZPViewModels.ApplicationRoleViewModel

@using SZZP2._2.Models

@{
    ViewData["Title"] = "Add Role";
}

<h2>Dodawanie/Edycja roli w systemie</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEditApplicationRole" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleName" control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Dodaj/Zapisz role" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Powrót do listy ról</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

