@model IEnumerable<SZZP2._2.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista Wydziałów</h2>

<p>
    <a asp-action="Create" class=" btn btn-primary">Dodaj nowy wydział</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameDepartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SymbolDeprtament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offices)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameDepartment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SymbolDeprtament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offices.NameOffice)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.IDDepartment">Edycja</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IDDepartment">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
