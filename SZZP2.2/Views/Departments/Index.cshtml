@model IEnumerable<SZZP2._2.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">

    <div class="panel-heading panel-head">Lista wydziałów</div>
    <div class="panel-body">
        <div class="btn-group">

            <p>
                <a asp-action="Create" class=" btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i> Dodaj nowy wydział
                </a>
            </p>
        </div>
        <hr>
        <div class="top-buffer"></div>
        <table class="table table-striped table-responsive table-condensed">
            <thead>
                <tr style="font-size:18px">
                    <th>
                        @Html.DisplayNameFor(model => model.NameDepartment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SymbolDeprtament)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Offices.NameOffice)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="font-size:15px">
                        <td>
                            @Html.DisplayFor(modelItem => item.NameDepartment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SymbolDeprtament)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Offices.NameOffice)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.IDDepartment">
                                <i class="glyphicon glyphicon-pencil"></i> Edycja
                            </a> |
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IDDepartment">
                                <i class="glyphicon glyphicon-trash"></i> Usuń
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

