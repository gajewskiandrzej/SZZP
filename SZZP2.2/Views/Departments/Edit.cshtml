@model SZZP2._2.Models.Department

@{
    ViewData["Title"] = "Edit";
}

<h2>Edycja wydziału</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDDepartment" />
            <div class="form-group">
                <label asp-for="Offices.NameOffice" class="control-label"></label>
                <select asp-for="IDOffice" class="form-control" asp-items="ViewBag.IDOffice"></select>
                <span asp-validation-for="IDOffice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameDepartment" class="control-label"></label>
                <input asp-for="NameDepartment" class="form-control" />
                <span asp-validation-for="NameDepartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SymbolDeprtament" class="control-label"></label>
                <input asp-for="SymbolDeprtament" class="form-control" />
                <span asp-validation-for="SymbolDeprtament" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
