@model IEnumerable<SZZP2._2.Models.APPUser>

@{
    ViewData["Title"] = "Index";
}

<h2>Uzytkownicy aplikacji</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj użytkownika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.NameRole)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.IDAPPUser">Edycja</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IDAPPUser">Szczegóły</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IDAPPUser">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
