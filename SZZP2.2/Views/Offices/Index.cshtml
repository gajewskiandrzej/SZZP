@model IEnumerable<SZZP2._2.Models.Office>

@{
    ViewData["Title"] = "Lista Biur PKP S.A.";
}

<h2>Lista Biur PKP S.A.</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowe biuro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SymbolOffice)
            </th>
            <th>Operacje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOffice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SymbolOffice)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.IDOffice">Szczegóły</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IDOffice">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
