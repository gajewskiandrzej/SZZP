@model SZZP2._2.Models.SZZPViewModels.DataChangeIndexData;

@{
    ViewData["Title"] = "Index";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">

    <div class="panel-heading panel-head">Modyfikacja danych pracowników</div>
    <div class="panel-body">
        <div class="btn-group">
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("PracownikHR"))
                {
                    <form asp-action="Index" method="get" class="form-inline" role="form">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            Podaj numer SAP: <input type="text" name="AddNrSAP" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Dodaj do modyfikacji" />
                        </div>

                    </form>
                }

                else if (User.IsInRole("AdministratorAD"))
                {
                    <a asp-controller="ADUsers" asp-action="UpdateADUsers" class="btn btn-primary">
                        <i class="glyphicon glyphicon-plus"></i> Modyfikuj dane pracowników w Active Directory
                    </a>
                }
                else if (User.IsInRole("AdministratorAplikacji"))
                {
                    <form asp-action="Index" method="get" class="form-inline" role="form">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            Podaj numer SAP: <input type="text" name="AddNrSAP" class="form-control" />
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Dodaj do modyfikacji" />
                        </div>

                    </form>
                    <p></p>
                    <div>
                        <a asp-controller="ADUsers" asp-action="UpdateADUsers" class="btn btn-primary">
                            <i class="glyphicon glyphicon-plus"></i> Modyfikuj dane pracowników w Active Directory
                        </a>
                    </div>
                }
            }
            <hr>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-striped table-responsive table-condensed">
            <thead>
                <tr style="font-size:13px" class="small text-left">
                    <th>Data zmiany</th>
                    <th>Nr SAP</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Biuro</th>
                    <th>Koniec umowy</th>
                    <th>Status zmiany</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataChanges)
                {
                    <tr style="font-size:13px" class="small text-left">
                        <td>
                            @Html.DisplayFor(modelItem => item.DateChange)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NrSap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Offices.NameOffice)
                        </td>
                        <td>
                            @Html.DisplayFor(modeItem => item.EndContract)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Statuses.NameStatus)
                        </td>

                        <td>
                            <a asp-action="Edit" style="font-size: 11px" class="btn btn-success" asp-route-id="@item.IDDataChange">
                                <i class="glyphicon glyphicon-pencil"></i> Edycja
                            </a> |
                            <a asp-action="Delete" style="font-size: 11px" class="btn btn-danger" asp-route-id="@item.IDDataChange">
                                <i class="glyphicon glyphicon-trash"></i>Usuń z listy
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>