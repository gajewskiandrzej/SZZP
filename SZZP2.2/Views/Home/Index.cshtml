@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner6.png" alt="PKP S.A." class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    System Zarządzania Zmianami Personalnymi - Sprawniej przekazuj informację do pracowników innych biur.
                    <a class="btn btn-default" href="">
                        Przeczytaj więcej
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/banner4.png" alt="Biuro Spraw Pracowniczych" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Biuro Spraw Pracowniczych pełni ważną funkcję ze względu postanowienia Polityki Personalnej i Polityki Szkoleniowo-Rozwojowej.
                    <a class="btn btn-default" href="http://intranet.pkp.pl/departamenty/dt/kdk/strona/zadania.aspx">
                        Przeczytaj więcej
                    </a>
                </p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/banner5.png" alt="Biuro Teleinformatyki" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Biuro Teleinformatyki zadba o Twoje dane i komfort przy ich przetwarzaniu.
                    <a class="btn btn-default" href="http://intranet.pkp.pl/departamenty/dt/kndt/strona/zadania.aspx">
                        Przeczytaj więcej
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Zatrudnienia pracowników</h2>
        <div class="panel panel-primary">
            <div class="panel-heading">Zatrudnienia</div>
            <div class="panel-body text-center">
                <i class="fa fa-user-plus fa-10x"></i>
            </div>
            <div class="panel-footer text-center">
                <a asp-area="" asp-controller="Employments" asp-action="Index">Zatrudnij</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h2>Modyfikacje danych</h2>
        <div class="panel panel-primary">
            <div class="panel-heading">Modyfikacje</div>
            <div class="panel-body text-center">
                <i class="fa fa-user-edit fa-10x"></i>
            </div>
            <div class="panel-footer text-center">
                <a asp-area="" asp-controller="DataChanges" asp-action="Index">Modyfikuj</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h2>Zwolnienia pracowników</h2>
        <div class="panel panel-primary">
            <div class="panel-heading">Zwolnienia</div>
            <div class="panel-body text-center">
                <i class="fa fa-user-minus fa-10x"></i>
            </div>
            <div class="panel-footer text-center">
                <a asp-area="" asp-controller="Dismissal" asp-action="Index">Zwolnij</a>
            </div>
        </div>
    </div>
</div>
